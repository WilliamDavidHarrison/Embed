<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- HTML Meta Tags -->
        <title>Embed</title>
        <meta name="description" content="<%= embed.description %>" />

        <!-- Google / Search Engine Tags -->
        <meta itemprop="name" content="<%= embed.title %>" />
        <meta itemprop="description" content="<%= embed.description %>" />
        <meta itemprop="image" content="<%= embed.image %>" />

        <!-- Facebook Meta Tags -->
        <meta property="og:title" content="<%= embed.title %>" />
        <meta property="og:description" content="<%= embed.description %>" />
        <meta property="og:image" content="<%= embed.image %>" />

        <!-- Twitter Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="<%= embed.title %>" />
        <meta name="twitter:description" content="<%= embed.description %>" />
        <meta name="twitter:image" content="<%= embed.image %>" />

        <!-- Scripts -->
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body class="p-4 max-w-md m-auto bg-zinc-900 text-white text-center break-all">
        <% if(embed.title) { %>
            <h1 class="text-2xl font-bold">Title</h1>
            <p><%= embed.title %></p>

            <% if(embed.description) { %>
                <div class="mb-4"></div>
            <% } %>
        <% } %>

        <% if(embed.description) { %>
            <h1 class="text-2xl font-bold">Description</h1>
            <p><%= embed.description %></p>

            <% if(embed.image) { %>
                <div class="mb-4"></div>
            <% } %>
        <% } %>

        <% if(embed.image) { %>
            <h1 class="text-2xl font-bold">Image</h1>
            <a href="<%= embed.image %>" class="text-blue-500 hover:text-blue-600"><%= embed.image %></a>
            <img src="<%= embed.image %>" class="h-32 mt-2 mx-auto">
        <% } %>
    </body>
</html>
